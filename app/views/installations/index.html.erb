      <p class="description"><%= installation.description %></p>
      <p class="credit"><%= installation.credit %></p>
      <p class="copyright"><%= installation.copyright %></p>
      <p class="date"><%= installation.created_at.strftime("%B %d, %Y") %></p>
      -->

  <% if user_signed_in? %>
  <br>
              <%= link_to 'Show', installation %> | <%= link_to 'Edit', edit_installation_path(installation) %> |
              <%= link_to 'Destroy', installation, method: :delete, data: { confirm: 'Are you sure?' } %>
  <% end %>
  </div>
<% end %>


<% if user_signed_in? %>

  <%= link_to 'New Installation', new_installation_path, class: "btn btn-success" %>
<% end %>

 