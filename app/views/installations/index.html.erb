<p id="notice"><%= notice %></p>

<!--<h1>Installations</h1>-->
<% if false %>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Credit</th>
        <th>Copyright</th>
        <th>Comment</th>
        <th>Created at</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @installations.each do |installation| %>
        <div class="installations_wrapper">
          <tr>
            
            <td><%= link_to installation.title, installation %></td>
            <td><%= installation.description %></td>
            <td><%= installation.credit %></td>
            <td><%= installation.copyright %></td>
            <td><%= installation.comment %></td>
            <td><%= installation.created_at %></td>
            <td><%= link_to 'Show', installation %></td>
            <td><%= link_to 'Edit', edit_installation_path(installation) %></td>
            <td><%= link_to 'Destroy', installation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        </div>
      <% end %>
    </tbody>
  </table>
<% end %>


<% @installations.each do |installation| %>
  <div class="installation_wrapper">
      <td>
        <%= link_to installation do %>
          <%= image_tag (installation.image) , style: 'float: left;	margin-right: 2em; border-radius: 0.35em;height:80px; width:auto'  %>   
        <% end %>
      </td>
      <h3 class="title"><%= link_to installation.title, installation %></h2>
