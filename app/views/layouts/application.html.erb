<!DOCTYPE html>
<html>
  <head>
    <title>IlaFirouzabadi</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'application', 'http://fonts.googleapis.com/css?family=Raleway:400,700' %>

  </head>

  <body>
  <br>
	<div id="sidebar">
		<div id="logo">
			<%= link_to root_path do %>
				<%= image_tag "logo.png" %>
			<% end %>
		</div>

		<ul>
			<li class="category">Website</li>
			<li><%= link_to "Home", root_path %></li>
			<li><%= link_to "Installations", installations_path %></li>
			<li><%= link_to "About", about_path %></li>
		</ul>

		<ul>
			<li class="category">Social</li>
			<li><a href="https://twitter.com/ilafirouzabadi">Twitter</a></li>
			<li><a href="http://instagram.com/ilafirouzabadi">Instagram</a></li>
			<li><a href="mailto:ila_firouzabadi@gmail.com">Email</a></li>
		</ul>





	</div>

	<div id="main_content">
		<div id="header">
			<% if current_page?(root_path) %>
				<p>Congratulations, you made it to my website</p>
			<% elsif current_page?(installations_path) %>
				<p>All Installations</p>
			<% elsif current_page?(about_path) %>
				<p>About</p>
			<% else %>
				<%= link_to "Back to All Installations", installations_path %>
			<% end %>


	
			<% if user_signed_in? %>
				<div class="buttons">
					<button class="button"><%= link_to "New Installation", new_installation_path %></button>
					<button class="button"><%= link_to('Logout', destroy_user_session_path, method: :delete) %></button>
				</div>
			<% end %>



		</div>

		<% flash.each do |name, msg| %>
			<%= content_tag(:div, msg, class: "alert") %>
		<% end %>

		<%= yield %>
	</div>
  </body>
</html>
