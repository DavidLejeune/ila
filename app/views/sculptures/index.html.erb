<% provide(:page_title, 'All sculptures') %>

<p id="notice"><%= notice %></p>

<h1>Sculptures</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Credit</th>
      <th>Copyright</th>
      <th>Slug</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sculptures.each do |sculpture| %>
      <tr>
        <td><%= sculpture.title %></td>
        <td><%= sculpture.description %></td>
        <td><%= sculpture.credit %></td>
        <td><%= sculpture.copyright %></td>
        <td><%= sculpture.slug %></td>
        <td><%= link_to 'Show', sculpture %></td>
        <td><%= link_to 'Edit', edit_sculpture_path(sculpture) %></td>
        <td><%= link_to 'Destroy', sculpture, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Sculpture', new_sculpture_path %>
